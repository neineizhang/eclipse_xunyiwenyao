                    android:layout_width="100dip"
                    android:layout_height="fill_parent"
                    android:textColor="#850"
                    android:gravity="center" />

                <TextView
                    android:text="药品规格"
                    android:layout_width="100dip"
                    android:layout_height="fill_parent"
                    android:textColor="#850"
                    android:gravity="center" />

